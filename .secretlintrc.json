{
    "rules": [
        {
            "id": "@secretlint/secretlint-rule-preset-recommend"
        },
        {
            "id": "@secretlint/secretlint-rule-pattern",
            "options": {
                "patterns": [
                    {
                        "name": "Potential Secret (High Entropy/Pattern)",
                        "pattern": "/(?!.*[\\.json|\\.md|\\.lock$])[a-zA-Z0-9+/]{40,}/",
                        "message": "Chaîne de caractères à haute entropie détectée. Merci d'utiliser des variables d'environnement."
                    },
                    {
                        "name": "Sensitive File (.env)",
                        "pattern": "/\\.env.*/",
                        "message": "Fichier .env détecté. Ne jamais committer de fichiers d'environnement."
                    },
                    {
                        "name": "Sensitive File (.pem)",
                        "pattern": "/\\.pem$/",
                        "message": "Fichier de clé privée .pem détecté."
                    }
                ]
            }
        }
    ]
}